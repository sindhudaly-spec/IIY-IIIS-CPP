#include <iostream>
using namespace std;

class Point {
private:
    int x, y;
public:
    Point(int xVal = 0, int yVal = 0) : x(xVal), y(yVal) {}

    void display() const {
        cout << "(" << x << ", " << y << ")" << endl;
    }

    Point operator++() {
        x++;
        y++;
        return *this;
    }

    Point operator+(const Point& other) const {
        return Point(x + other.x, y + other.y);
    }
};

int main() {
    Point p1(2, 3), p2(4, 1);
    ++p1;
    Point p3 = p1 + p2;
    cout << "p1 after increment: ";
    p1.display();
    cout << "p3 (p1 + p2): ";
    p3.display();
    return 0;
}
